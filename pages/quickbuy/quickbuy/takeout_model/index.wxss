.flex {
    display: -ms-flexbox;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

page {
    background: #f5f5f5;
    height: 100%;
}

.main {
    height: 100%;
}

.left {
    width: 168rpx;
    background: #f7f7f7;
}

.left view {
    line-height: 88rpx;
    font-size: 26rpx;
    color: #666;
    text-align: center;
}

scroll-view.right {
    width: 582rpx;
    box-sizing: border-box;
    background: #fff;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
}

::-webkit-scrollbar-thumb {
    background: transparent;
}

::-webkit-scrollbar-track {
    background: transparent;
}

.right .tit {
    font-size: 24rpx;
    padding: 24rpx 0 24rpx 20rpx;
}

.right image {
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
}

.goodsList {
    position: relative;
    margin-bottom: 40rpx;
    padding: 0 20rpx;
}

.right .addShopCar {
    position: absolute;
    right: 10rpx;
    bottom: 0;
    font-size: 30rpx;
    color: #666;
    width: 144rpx;
}

.right .onlyadd {
    width: 58rpx;
}

.addShopCar image {
    width: 44rpx;
    height: 44rpx;
    margin: 0;
    border-radius: 50%;
}

.addShopCar text {
    padding: 0 10rpx;
    line-height: 44rpx;
}

.goodsList>view {
    width: 374rpx;
}

.height {
    height: 126rpx;
}

.height view:nth-of-type(1) {
    font-size: 26rpx;
    line-height: 36rpx;
    margin-bottom: 10rpx;
    margin-top: -6rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.height view:nth-of-type(2) {
    font-size: 24rpx;
    color: #999;
}

.goodsList .height+view {
    font-size: 30rpx;
    font-weight: bold;
    color: #ff5555;
}

.goodsList view i {
    font-size: 22rpx;
    color: #b3b3b3;
    padding-left: 10rpx;
    line-height: 30rpx;
    font-weight: normal;
}

.left view.active {
    border-left: 2px solid #ff5555;
    background: #fff;
}

.left view.active view {
    color: #ff5555;
}

.shopCar {
    width: 110rpx;
    height: 110rpx;
    background: #fa4040;
    border-radius: 50%;
    box-shadow: 0 0 8px #fa4040;
    position: fixed;
    bottom: 94rpx;
    left: 30rpx;
}

.shopCar .shopCarImg {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    position: relative;
}

.shopCar i {
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    border-radius: 50%;
    background: #e40100;
    right: 30rpx;
    top: 30rpx;
}

.footerList .noGoods {
    text-align: center;
    font-size: 26rpx;
    display: block;
    margin: 80rpx auto;
}

.shopCarList {
    position: fixed;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.3);
    top: 0;
    left: 0;
    transition: all 0.6s;
}

.displayNo {
    top: 100%;
}

.shopCarList>view {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
}

.scListTit {
    justify-content: space-between;
    background: #f7f5f5;
    line-height: 80rpx;
    padding: 0 28rpx;
    font-size: 26rpx;
}

.scListTit text:nth-of-type(2) {
    color: #999;
}

.carList {
    overflow: hidden;
    margin: 0 28rpx;
    font-size: 28rpx;
    border-bottom: 1px solid #e6e6e6;
}

.carList>view {
    float: right;
}

.carList>view.goodsMsg {
    float: left;
    width: 400rpx;
}

.carList .goodsMsg view:nth-of-type(1) {
    line-height: 36rpx;
    padding-top: 30rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.carList .goodsMsg view:nth-of-type(2) {
    color: #b3b3b3;
    font-size: 24rpx;
    padding-bottom: 30rpx;
}

.money {
    color: #ff5555;
    margin: 48rpx 30rpx 0 0;
}

.carList .addShopCar {
    margin-top: 46rpx;
}

.tips {
    font-size: 22rpx;
    color: #666;
    text-align: center;
    line-height: 56rpx;
    background: #f5f5f5;
}

.shopCar2 {
    background: #474749;
    height: 98rpx;
    color: #fff;
    font-size: 22rpx;
}

.carIcon {
    position: relative;
}

.shopCar2 image {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    box-shadow: none;
    border: 8rpx solid #474749;
    margin: 0 32rpx 0 30rpx;
    margin-top: -40rpx;
}

.total view:nth-of-type(1) {
    font-size: 32rpx;
    margin-top: 14rpx;
}

.total+view {
    background: #ff9d55;
    width: 200rpx;
    text-align: center;
    line-height: 98rpx;
    margin-left: 108rpx;
    font-size: 28rpx;
}

.shopCar2 i {
    position: absolute;
    top: -18rpx;
    right: 28rpx;
    width: 28rpx;
    height: 28rpx;
    border-radius: 50%;
    background: #e40100;
    display: block;
    text-align: center;
    font-size: 18rpx;
    line-height: 28rpx;
}

.bigImg image {
    width: 582rpx;
    height: 360rpx;
}

.bigImg view:nth-of-type(1) {
    font-size: 26rpx;
    color: #333;
    padding: 24rpx 0 16rpx 16rpx;
}

.bigImg view:nth-of-type(2) {
    font-size: 24rpx;
    color: #999;
    padding: 0 0 24rpx 16rpx;
}

.leftItem {
    display: flex;
}

.leftItem image {
    width: 24rpx;
    height: 24rpx;
    margin: 32rpx 0 0 8rpx;
}

.leftItem view {
    flex: 1;
}

.footerList {
    max-height: 620rpx;
}

div {
    position: fixed;
    width: 50rpx;
    height: 50rpx;
    background: red;
    border-radius: 50%;
    animation: mymove 1s ease-in;
    right: 80rpx;
}

@-webkit-keyframes mymove {
    20% {
        right: 200rpx;
        top: 400rpx;
    }

    99% {
        right: 680rpx;
        top: 1080rpx;
        width: 20rpx;
        height: 20rpx;
    }

    100% {
        right: 80rpx;
        width: 50rpx;
        height: 50rpx;
    }
}

@keyframes mymove {
    20% {
        right: 200rpx;
        top: 400rpx;
    }

    99% {
        right: 680rpx;
        top: 1080rpx;
        width: 20rpx;
        height: 20rpx;
    }

    100% {
        right: 80rpx;
        width: 50rpx;
        height: 50rpx;
    }
}

.good_box {
    width: 18px;
    height: 18px;
    position: fixed;
    border-radius: 50%;
    overflow: hidden;
    left: -50%;
    top: 50%;
    z-index: +99;
    background: #ff5555;
}